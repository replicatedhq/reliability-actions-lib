{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "noImplicitAny": false,
        "noEmitOnError": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "build",
        "pretty": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/index.ts"  ],
    "exclude": [
        "node_modules",
        "src/**/*_test.ts",
        "src/test/**/*.ts"
    ]
  }